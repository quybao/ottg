[Unit]
Description=Gunicorn server for DOMAIN

[Service]
Restart=on-failure
User=ubuntu
WorkingDirectory=/home/ubuntu/sites/superlists-DOMAIN
EnvironmentFile=/home/ubuntu/sites/superlists-DOMAIN/.env

ExecStart=/home/ubuntu/sites/superlists-DOMAIN/virtualenv/bin/gunicorn \
    --bind unix:/tmp/superlists-DOMAIN.socket \
    superlists.wsgi:application

[Install]
WantedBy=multi-user.target
